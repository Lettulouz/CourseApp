@model IEnumerable<Category>
@{
    ViewData["Title"] = "Kategorie";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista kategorii</h2>
        </div> 
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Utwórz nową kategorię
            </a>
        </div>
    </div>
    </br>
    </br>
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Nazwa kategorii
                </th>
                <th>
                    Kolejność wyświetlania
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Name
                    </td>
                    <td width="30%">
                        @obj.DisplayOrder
                    </td>
                    <td>
                        <div class="row">
                            <div class="col-6">
                                <div class="btn-group" role="group">
                                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edytuj</a>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="btn-group" role="group">
                                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-pencil-square"></i> Delete</a>
                                </div>
                            </div>
                        </div>                             
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>